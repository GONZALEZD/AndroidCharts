<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PieChart">
        <attr name="border_color" format="color"/>
        <attr name="animation_distance" format="dimension"/>
        <attr name="outer_border_width" format="dimension"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="text_in_percent" format="boolean"/>
        <attr name="text_position" format="fraction"/>
    </declare-styleable>
    <declare-styleable name="PointersContainerView">
        <attr name="image" format="reference"/>
        <attr name="minimum_scale" format="float"/>
        <attr name="maximum_scale" format="float"/>
        <attr name="pointers_default_color" format="color"/>
        <attr name="pointers_default_symbol_color" format="color"/>
        <attr name="pointers_default_background_color" format="color"/>
        <attr name="pointers_default_stroke_width" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="PointerView">
        <attr name="line_color" format="color"/>
        <attr name="symbol_color" format="color"/>
        <attr name="background_color" format="color"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="end_point_size" format="dimension"/>
    </declare-styleable>
</resources>